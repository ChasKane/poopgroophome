				'</div>';
		}
		
		function newUserPop()
		{
			document.getElementById("popViewTitle").innerHTML = '<p>Create New User</p>';

			document.getElementById("popViewBod").innerHTML = '<div id="errorMess"></div><div id="signupDiv">'+
			'<span id="inner-tile">Sign-Up</span><br>'+
			'<input type="text" id="signup_userName" placeholder="Username"><br>'+
			'<input type="text" id="signup_password" placeholder="Password"><br>'+
